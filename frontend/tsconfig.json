{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Configuración para proyectos con bundler como Vite */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Opciones de Linting y robustez */
    "strict": true,
    "noUnusedLocals": true,         // ¡Mantén esto en true para un código limpio!
    "noUnusedParameters": true,     // ¡Mantén esto en true para un código limpio!
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "exclude": [ // Agregamos esta sección para ignorar los archivos de prueba
    "src/**/*.test.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.ts",
    "src/**/*.spec.tsx",
    "src/__tests__",
    "src/setupTests.ts" // Si tienes un archivo como este, exclúyelo también
  ],
  // Si tienes un archivo tsconfig.node.json, mantenlo. Sino, puedes quitarlo.
  "references": [{ "path": "./tsconfig.node.json" }] 
}